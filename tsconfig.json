{
  "compilerOptions": {
      "target": "ES5",
      "module": "esnext",
      "jsx": "react",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationDir": "types",
      "emitDeclarationOnly": true
  },
  "files": [
    "./rollup.config.js",
    "./src/index.tsx"
  ],
}